<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert</item>
        <item name="android:windowAnimationStyle">@style/style_activity</item>
    </style>

    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textAppearance">@style/text_input_layout</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="style_activity" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="style_scroll" parent="@android:style/Theme">
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="style_setting_layout" parent="match_wrap">
        <item name="android:padding">@dimen/padding_setting_layout</item>
    </style>

    <style name="style_setting_layout_small" parent="match_wrap">
        <item name="android:paddingLeft">@dimen/padding_setting_layout</item>
        <item name="android:paddingRight">@dimen/padding_setting_layout</item>
        <item name="android:paddingTop">@dimen/padding_setting_layout_small</item>
        <item name="android:paddingBottom">@dimen/padding_setting_layout_small</item>
    </style>

    <style name="style_setting_line" parent="match_wrap">
        <item name="android:layout_marginLeft">@dimen/padding_setting_layout</item>
        <item name="android:layout_marginRight">@dimen/padding_setting_layout</item>
        <item name="android:height">1dp</item>
        <item name="android:background">@color/line</item>
    </style>

    <style name="style_setting_text" parent="wrap_wrap">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/f_16</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="style_setting_item_title" parent="style_setting_text">
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="style_setting_check" parent="wrap_wrap">
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:drawableRight">@drawable/bg_setting_check</item>
        <item name="android:button">@null</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="style_login_text_input_layout" parent="match_wrap">
        <item name="android:paddingLeft">@dimen/padding_setting_layout</item>
        <item name="android:paddingRight">@dimen/padding_setting_layout</item>
    </style>

    <style name="style_login_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:imeOptions">actionUnspecified</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/f_18</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:drawablePadding">@dimen/padding_login_user_name</item>
    </style>

    <style name="text_input_layout" parent="android:TextAppearance">
        <item name="android:textColorHint">@color/secondary_text</item>
    </style>

</resources>
